@model List<Producto>

<body>

    <main class="container mt-5">
        <h1 class="mb-4">üìã Productos en Stock</h1>
        <article
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <ul class="navbar-nav flex-grow-1 justify-content-start">
                <li class="nav-item">
                    <a class="btn btn-primary" asp-controller="Producto" asp-action="CrearProducto">+Nuevo
                        Producto</a>
                </li>

            </ul>
        </article>
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>

                    <th scope="col" class="col-6 text-center">Descripci√≥n</th>
                    <th scope="col" class="col-1 text-center">Precio (AR$)</th>

                    <!-- Aqui deber√≠a chequear si es o no admin para mostrar esto -->
                    <th scope="col" class="col-1 text-center">üìùEditar</th>
                    <th scope="col" class="col-1 text-center">üóëÔ∏èEliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Descripcion</td>
                        <td class="text-center">@p.Precio</td>
                        <!-- Aqui deber√≠a chequear si es o no admin para mostrar esto -->
                        <td class="flex-center align-items-center text-center">
                            <a class="btn btn-info text-white" asp-controller="Producto" asp-action="ModificarProducto"
                                asp-route-id="@p.IdProducto">Modificar</a>
                        </td>
                        <td class="flex-center align-items-center text-center">
                            <a class="btn btn-danger" asp-controller="Producto" asp-action="EliminarProducto"
                                asp-route-id="@p.IdProducto">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>